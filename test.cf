#include <unistd.h>

int v = 0;

void	ft_putnbr_fd(int n, int fd)
{
	long	nbr;
	char c;

	nbr = n;
	if (nbr < 0)
	{
		write(fd, "-", 1);
		nbr *= -1;
	}
	if (nbr > 9)
	{
		ft_putnbr_fd(nbr / 10, fd);
		ft_putnbr_fd(nbr % 10, fd);
	}
	else
	{
		c = nbr + 48;
		write(fd, &c , 1);
	}
}

void b(int signum)
{
	if (signum == 1)
	{
		v <<= 1;
		v |= 0b00000001;
	}
	if (signum == 0)
		v <<= 1;
}

void	encoding_send(int c)
{
	int	bits;

	bits = 8;
	while (bits--)
	{
		if (c & 0b10000000)
		{
			write(1,"1",1);
			b(1);
		}
		else
		{
			write(1,"0",1);
			b(0);
		}
		c <<= 1;
		usleep(150);
	}
}

int main()
{
	unsigned char c = 'H';

	encoding_send(c);
	write(1,"\n",1);
	ft_putnbr_fd(v,1);

}
